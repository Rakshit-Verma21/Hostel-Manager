<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="190dp"
    android:layout_height="200dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="30dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/room_cv_image_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/background"
            app:srcCompat="@drawable/baseline_bedroom_child_24" />

        <TextView
            android:id="@+id/room_cv_room_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/room_cv_image_view"
            android:text="Room 2A"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/room_cv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/room_cv_room_name"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"
            android:text="Status : Available"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/room_cv_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/room_cv_type"
            android:layout_marginLeft="2dp"
            android:text="Size : 2"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/room_cv_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/room_cv_status"
            android:layout_marginLeft="2dp"
            android:text="Type : Single Bed"
            android:textAlignment="center"
            android:textSize="16sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>