<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="150dp"
    android:layout_margin="5dp"

    app:cardCornerRadius="15dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/card_h_image"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:cropToPadding="true"
            android:elevation="25dp"
            app:civ_border_width="2dp"
            app:civ_circle_background_color="@color/black"
            app:srcCompat="@drawable/pfp" />

        <TextView
            android:id="@+id/card_h_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_h_image"
            android:padding="1dp"
            android:paddingLeft="1dp"
            android:text="kasssandra de santa"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/card_h_current_degree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_h_name"
            android:layout_marginTop="1dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="1dp"
            android:text="Master in Business Administration"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="8sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/card_h_college"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/card_h_current_degree"
            android:layout_marginTop="1dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Birla Institute of Technology "
            android:textAlignment="center"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/card_h_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/card_h_name"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@id/card_h_image"
            android:gravity="bottom"
            android:padding="2dp"
            android:text="Room Not Assigned"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="8sp" />

        <ImageButton
            android:id="@+id/imageButton_roomNot_Set"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_above="@id/card_h_room"
            android:layout_toRightOf="@id/card_h_image"
            android:backgroundTint="#FFFFFF"
            app:srcCompat="@drawable/baseline_error_24" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>