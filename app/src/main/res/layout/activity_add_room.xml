<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Add_Room">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_addRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" />

        <View
            android:id="@+id/divider10"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/toolbar_addRoom"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/background" />

        <TextView
            android:id="@+id/textView83"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider10"
            android:layout_margin="5dp"
            android:text="Use Name Such As 2A or 3B | For Size  Enter either a single Number | For Type Enter Double Seater Or Single Or Triple Seater"
            android:textAlignment="center"
            android:textStyle="bold" />

        <View
            android:id="@+id/divider11"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/textView83"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/background" />

        <TextView
            android:id="@+id/text_view_room_name"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@id/divider11"
            android:layout_margin="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text=" Name :"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/add_room_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/divider11"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/text_view_room_name"
            android:ems="10"
            android:hint="Enter  Room Name"
            android:inputType="text"
            android:singleLine="true" />

        <TextView
            android:id="@+id/text_view_room_size"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@id/text_view_room_name"
            android:layout_margin="5dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="Size :"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/add_room_size"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/add_room_name"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/text_view_room_size"
            android:ems="10"
            android:hint="Enter Room Size"
            android:inputType="number"
            android:singleLine="true" />

        <TextView
            android:id="@+id/text_view_room_type"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@id/add_room_size"
            android:layout_margin="5dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="Type :"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/add_room_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_room_size"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/text_view_room_type"
            android:ems="10"
            android:hint="Enter Room Type" />

        <LinearLayout
            android:id="@+id/ladd_room_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_room_type"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView76"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="New Room Details :"
                android:textAlignment="viewStart"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/add_room_confirm_room_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Room Name : 2A"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/add_room_confirm_room_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Room Size : 2"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/add_room_confirm_room_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Type : Double"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView74"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Status : Available"
                android:textAlignment="center"
                android:textSize="16sp" />

            <Button
                android:id="@+id/add_room_button_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/background_text"
                android:elevation="40dp"
                android:text="Confirm" />

            <TextView
                android:id="@+id/textView82"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Press Confirm to Create A new Room , You can then add New Hostlers in this Room From the Management Tab"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="14sp" />

            <Button
                android:id="@+id/add_room_button_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/background_text"
                android:elevation="20dp"
                android:text="Add Room" />
        </LinearLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>